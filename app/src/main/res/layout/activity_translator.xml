<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_translator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ru.ya.translate.translator.TranslatorActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight=".08">
        <Button
            android:id="@+id/from_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onFromLanguageButtonClicked"
            android:text="Русский" />

        <Button
            android:id="@+id/swap_languages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:text="&lt;-&gt;"
            android:onClick="onSwapLanguagesButtonClicked"/>

        <Button
            android:id="@+id/to_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight=".40"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="onToLanguageButtonClicked"
            android:text="Английский" />
    </LinearLayout>

    <EditText
        android:id="@+id/text_to_translate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".30"
        android:inputType="text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/translation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".62"/>

</LinearLayout>
